#include <iostream>
#include <fstream>
#include <string>

using namespace std;

void displayMenu() {
    cout << "1. Create a new file" << endl;
    cout << "2. Open an existing file" << endl;
    cout << "3. Save file" << endl;
    cout << "4. Exit" << endl;
    cout << "Choose an option: ";
}

void createNewFile() {
    string fileName, content;
    cout << "Enter the name of the file to create: ";
    cin >> fileName;
    ofstream file(fileName);
    if (file.is_open()) {
        cout << "Enter content (press Ctrl+Z followed by Enter to finish):\n";
        cin.ignore(); // Ignore newline character from previous input
        while (getline(cin, content)) {
            file << content << endl;
        }
        file.close();
        cout << "File created successfully.\n";
    } else {
        cout << "Unable to create file.\n";
    }
}

void openFile() {
    string fileName, line;
    cout << "Enter the name of the file to open: ";
    cin >> fileName;
    ifstream file(fileName);
    if (file.is_open()) {
        cout << "File content:\n";
        while (getline(file, line)) {
            cout << line << endl;
        }
        file.close();
    } else {
        cout << "Unable to open file.\n";
    }
}

void saveFile() {
    string fileName, content;
    cout << "Enter the name of the file to save: ";
    cin >> fileName;
    ofstream file(fileName);
    if (file.is_open()) {
        cout << "Enter content (press Ctrl+Z followed by Enter to finish):\n";
        cin.ignore(); // Ignore newline character from previous input
        while (getline(cin, content)) {
            file << content << endl;
        }
        file.close();
        cout << "File saved successfully.\n";
    } else {
        cout << "Unable to save file.\n";
    }
}

int main() {
    int choice;
    do {
        displayMenu();
        cin >> choice;
        switch (choice) {
            case 1:
                createNewFile();
                break;
            case 2:
                openFile();
                break;
            case 3:
                saveFile();
                break;
            case 4:
                cout << "Exiting...\n";
                break;
            default:
                cout << "Invalid choice. Please choose again.\n";
        }
    } while (choice != 4);

    return 0;
}
